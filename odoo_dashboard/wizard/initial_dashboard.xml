<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bi_dashboard_initial" model="ir.ui.view">
        <field name="name">bi.dashboard.initial.form</field>
        <field name="model">bi.dashboard.initial</field>
        <field name="arch" type="xml">
            <form create="0">
                Odoo needs to initialize summarized data for the dashboard. Do you want to continue?
                <footer>
                    <button string="OK" class="btn btn-primary" name="action_accept" type="object"/>
                    <button string="Do it later" class="btn btn-secondary" name='action_cancel' type="object"/>
                </footer>
            </form>
        </field>
    </record>



    <record id="action_dashboard_initial" model="ir.actions.act_window">
        <field name="name">Notification!</field>
        <field name="res_model">bi.dashboard.initial</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="bi_dashboard_initial" />
        <field name="target">new</field>
    </record>
</odoo>