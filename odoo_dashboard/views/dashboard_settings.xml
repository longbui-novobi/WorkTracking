<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_dashboard" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.dashboard</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1000"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Omni Dashboard" string="Omni Dashboard"
                     data-key="odoo_dashboard" groups="odoo_dashboard.dashboard_group_manager">
                    <h2>General</h2>
                    <div class="row mt16 o_settings_container" name="dashboard_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="bi_dashboard_reload_interval">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="bi_dashboard_reload_interval"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        Recompute dashboard data every
                                        <field name="bi_dashboard_reload_interval" class="text-center oe_inline"/>
                                        <span>min(s)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="bi_dashboard_date_range">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="bi_dashboard_date_range"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        Recompute dashboard data for last
                                        <field name="bi_dashboard_date_range" class="text-center oe_inline"/>
                                        <span>day(s)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="show_demo_date"
                             title="Show demo data for Omni Dashboard">
                            <div class="o_setting_left_pane">
                                <field name="show_sample_data"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_sample_data"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                      role="img"
                                      aria-label="Values set here are company-specific."
                                      groups="base.group_multi_company"/>
                                <div class="text-muted">
                                    Show sample data when the data is unavailable
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>