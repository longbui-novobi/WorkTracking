<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_dashboard_board_config_list" model="ir.ui.view">
        <field name="name">view.dashboard.board.config.list</field>
        <field name="model">bi.dashboard.board.config</field>
        <field name="arch" type="xml">
            <tree string="Dashboard Boards" create="false" delete="false" default_order="id asc">
                <field name="id" invisible="1"/>
                <field name="name"/>
                <!--                <field name="active" widget="boolean_toggle"/>-->
                <field name="user_id" string="Owner" readonly="1"/>
                <field name="create_date"/>
                <!--                <field name="create_uid"/>-->
            </tree>
        </field>
    </record>

    <record id="view_dashboard_board_config_form" model="ir.ui.view">
        <field name="name">view.dashboard.board.config.form</field>
        <field name="model">bi.dashboard.board.config</field>
        <field name="arch" type="xml">
            <form create="false" delete="false">
                <header>
                    <button
                            string="Reset Board"
                            class="btn btn-secondary"
                            name="action_reset_board_with_base"
                            type="object"
                            attrs="{'invisible': [('is_layout_updated', '=', True)]}"
                            confirm="This action will remove all your current configurations. Do you want to continue?"
                    >
                    </button>
                    <button
                            string="Reset Board"
                            class="btn btn-primary"
                            name="action_reset_board_with_base"
                            type="object"
                            attrs="{'invisible': [('is_layout_updated', '=', False)]}"
                            confirm="This action will remove all your current configurations. Do you want to continue?"
                    >
                    </button>
                    <field name="is_layout_updated" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" widget="many2one_avatar_user" string="Owner" readonly="1"/>
                            <field name="create_date"/>
                            <!--                        <field name="create_uid"/>-->
                        </group>
                        <group>
                            <field name="filter_type_ids" widget="many2many_tags"
                                   options="{'no_create_edit': True, 'no_create': True}"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page id="item_configurations" string="Dashboard Items">
                                <field name="board_item_config_ids">
                                    <tree create="false" delete="false">
                                        <field name="name"/>
                                        <!--                                        <field name="layout_template"/>-->
                                        <field name="description"
                                               style="max-width:250px; overflow:hidden;white-space:nowrap;text-overflow:ellipsis;"/>
                                        <field name="active" widget="boolean_toggle" class="oe_read_only"/>
                                    </tree>
                                </field>
                                <!--                                <button name="add_more_items" string="Add more items" class="btn-secondary oe_read_only"-->
                                <!--                                        type="object"/>-->
                            </page>
                            <!--                            <page id="board_configurations" string="Configurations"-->
                            <!--                                  groups="odoo_dashboard.dashboard_group_manager">-->
                            <!--                                <group>-->
                            <!--                                    <field name="allowed_group_ids">-->
                            <!--                                        <tree editable="bottom">-->
                            <!--                                            <field name="name" string="Group"/>-->
                            <!--                                        </tree>-->
                            <!--                                    </field>-->
                            <!--                                </group>-->
                            <!--                                <group>-->
                            <!--                                    <field name="allowed_user_ids">-->
                            <!--                                        <tree editable="bottom">-->
                            <!--                                            <field name="name" string="User"/>-->
                            <!--                                        </tree>-->
                            <!--                                    </field>-->
                            <!--                                </group>-->
                            <!--                            </page>-->
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dashboard_board_config_search" model="ir.ui.view">
        <field name="model">bi.dashboard.board.config</field>
        <field name="arch" type="xml">
            <search string="Dashboard Boards">
                <field name="name"/>
                <filter string="Archived" name="archived_boards" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="view_dashboard_item_config_list" model="ir.ui.view">
        <field name="name">view.dashboard.item.config.list</field>
        <field name="model">bi.dashboard.item.config</field>
        <field name="arch" type="xml">
            <tree string="Dashboard Items" create="false" edit="false" delete="false" default_order="create_date">
                <field name="name"/>
                <!--                <field name="layout_template" readonly="1"/>-->
                <field name="description"/>
                <field name="user_id" readonly="1"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="create_date"/>
                <!--                <field name="create_uid"/>-->
            </tree>
        </field>
    </record>

    <record id="view_dashboard_item_config_form" model="ir.ui.view">
        <field name="name">view.dashboard.item.config.form</field>
        <field name="model">bi.dashboard.item.config</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="layout_template" readonly="1"/>
                        </group>
                        <group>
                            <field name="x_position"/>
                            <field name="y_position"/>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="min_width"/>
                            <field name="min_height"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="KPI Configurations" attrs="{'invisible':[('layout_template','!=','kpi')]}">
                            <group>
                                <group>
                                    <field name="kpi_show_indicator" readonly="1"/>
                                </group>
                                <group>
                                    <field name="kpi_img_b64" string="KPI Icon"
                                           widget="image" options="{'size': [70, 70]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dashboard_item_config_search" model="ir.ui.view">
        <field name="model">bi.dashboard.item.config</field>
        <field name="arch" type="xml">
            <search string="Dashboard Items">
                <field name="name"/>
                <filter string="Archived" name="archived_boards" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
</odoo>