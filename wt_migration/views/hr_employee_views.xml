<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wt_hr_form_view_inherited" model="ir.ui.view">
        <field name="name">Task Configurations</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="project_management.wt_hr_form_view_inherited"/>
        <field name="arch" type="xml">
            <field name="order_style" position="after">
                <field name="is_wt_admin" widget="boolean_toggle"/>
                <field name="auto_export_work_log" widget="boolean_toggle"/>
                <field name="auto_remove_access" widget="boolean_toggle"/>
                <field name="maximum_connection" attrs="{'invisible': [('auto_remove_access', '=', False)]}"/>
            </field>
            <xpath expr="//header" position="inside">
                <button name="action_update_token" type="object" string="Update Jira Token" class="btn-primary"/>
                <button name="action_reset_extension_token" type="object" string="Reset Extension Token" class="btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>